<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="2000dp" />
            <stroke android:width="1dp" android:color="#FFE62528" />
            <gradient android:angle="-90" android:startColor="#e1232a" android:endColor="#dc2427"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="2000dp" />
            <stroke android:width="1dp" android:color="#e4242e" />
            <solid android:color="#e42225"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="2000dp" />
            <stroke android:width="1dp" android:color="#e72431" />
            <gradient android:angle="-90" android:startColor="#e9242b" android:endColor="#ef2431" />
        </shape>
    </item>
</selector>